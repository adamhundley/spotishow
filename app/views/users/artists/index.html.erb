<div class="artist-table-background">
  <div class="container artist-table">
    <table class="table artists-table">
      <div class="row text-center add-artist col-sm-6 col-sm-offset-3" id="add-artist">
        <form class="addArtist form-group">
          <input type="text" id="name" name="name" placeholder="Enter an Artist" class="form-control ">
          <input type="submit" name="OK" class="btn btn-success btn-md addArtist" data-uid="<%= current_user.uid %>" value="Search Artist" id="search">
        </form>
        <div class="spinner" style="display:none">
          <div class="rect1"></div>
          <div class="rect2"></div>
          <div class="rect3"></div>
          <div class="rect4"></div>
          <div class="rect5"></div>
        </div>
      </div>
      <tbody class="artists-body">
        <% @artists.each do |artist| %>
          <div id="artist-<%= artist.id %>">

            <tr class="artists" id="artist-<%= artist.id %>">
              <td class="artists artist-images"><%= image_tag(artist.spotify_image_url, class:"artist-image") %></td>
              <td class="artist-name"><%= artist.name %></td>
              <td class="artists artist-facebook"><%= link_to image_tag("live.png", class:"live"), "#", {'data-target' => "#artist-#{artist.id}-modal", 'data-toggle' => "modal", 'class' => "artist-tour", 'id' => "artist-tour-#{artist.id}", 'data-artist' => "#{artist.name}", 'data-id' => "#{artist.id}" } %>


                <div class="modal fade" id="artist-<%= artist.id %>-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
                  <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h2 class="modal-title text-center"><%= artist.name %></h2>
                      </div>
                        <table class="table">
                          <div class="modal-spinner" style="display:none">
                            <div class="rect1"></div>
                            <div class="rect2"></div>
                            <div class="rect3"></div>
                            <div class="rect4"></div>
                            <div class="rect5"></div>
                          </div>
                            <tbody id="show-modal-body-<%= artist.id %>">
                          </tbody>
                        </table>
                    </div>
                  </div>
                </div>
              </td>

              <td class="artists spotify"><%= link_to image_tag("listen-on-spotify.png", class:"listen-on-spotify"), artist.spotify_uri %></td>

              <td class="artists artists-untrack">
                <button type="button" name="button" class="btn btn-danger btn-md untrack-artist" data-id="<%= artist.id %>", data-uid="<%= current_user.uid %>">untrack</button>
              </td>
            </tr>
          </div>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
