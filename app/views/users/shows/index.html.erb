<div class="show-table-background">
  <div class="container show-table">
    <table class="table shows-table">
      <div class="row text-center shows-header">
        <h1 class="shows-header-text">Upcoming shows for the artists you're tracking</h1>
      </div>
      <tbody class="shows-body">
        <% @shows.each do |show| %>
            <tr class="shows" id="show-<%= show.id %>">
              <td class="shows show-date"><%= show.datetime.month %>/<%= show.datetime.day %></td>
              <td class="shows show-artist"><%= show.artist_name %></td>
              <td class="shows show-venue"><%= show.venue_name %></td>
              <td class="shows show-location"><%= show.formatted_location %></td>
              <td class="shows show-tickets"><%= link_to image_tag("ticket.png", class:"ticket"), show.ticket_url, {target: "_blank"} %>
              </td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
