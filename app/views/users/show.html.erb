<div class="artist-dashboard-background">
  <div class="container dashboard-container">

    <div class="col-sm-4 text-center" id="my-location">
      <span class="dashboard-text">my location</span><br>
      <span class="dashboard-text">
        <%= current_user.location.upcase if current_user.location %></span><br>
        <%= link_to image_tag("update-location.png", class:"locationIcon"), "#"%>
    </div>
    <div class="col-sm-4 text-center" id="my-artists">
      <span class="dashboard-text">my artists</span><br>
      <div id="odometer" class="odometer">0</div>

      <script type="text/javascript">
        setTimeout(function(){
        odometer.innerHTML = <%= current_user.artists.count %>;
      }, 500);
      </script>

    </div>
    <div class="col-sm-4 text-center" id="my-shows">
      <span class="dashboard-text">my shows</span><br>

      <div id="shodometer" class="odometer">0</div>
        <script type="text/javascript">
          setTimeout(function(){
          shodometer.innerHTML = <%= current_user.shows.count %>;
        }, 500);
        </script>
    </div>
  </div>
</div>
